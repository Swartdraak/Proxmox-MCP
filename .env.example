# Example environment configuration
# Copy this file to .env and fill in your values

# Proxmox host (required)
PROXMOX_HOST=proxmox.example.com

# Proxmox port (optional, default: 8006)
PROXMOX_PORT=8006

# Authentication - Method 1: Password (less secure)
PROXMOX_USERNAME=root
PROXMOX_PASSWORD=your-password-here
PROXMOX_REALM=pam

# Authentication - Method 2: API Token (recommended)
# PROXMOX_USERNAME=root
# PROXMOX_TOKEN_ID=your-token-id
# PROXMOX_TOKEN_SECRET=your-token-secret
# PROXMOX_REALM=pam

# SSL/TLS verification (default: true)
# Set to false only for development with self-signed certificates
PROXMOX_VERIFY_SSL=true

# Request timeout in milliseconds (default: 30000)
PROXMOX_TIMEOUT=30000
