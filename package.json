{
  "name": "@swartdraak/proxmox-mcp-server",
  "version": "1.0.0",
  "description": "Industry-standard, security-first Model Context Protocol server for Proxmox VE",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "proxmox-mcp-server": "./dist/index.js"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE",
    "CHANGELOG.md",
    "docs/**/*"
  ],
  "scripts": {
    "build": "tsc",
    "postbuild": "node -e \"const fs = require('fs'); const os = require('os'); if (os.platform() !== 'win32') { try { fs.chmodSync('dist/index.js', 0o755); } catch (e) { console.warn('Could not set executable permission:', e.message); } }\"",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:fuzz": "node tests/fuzzing/fuzz-runner.js",
    "lint": "eslint src tests --ext .ts",
    "lint:fix": "eslint src tests --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "security:audit": "npm audit --audit-level=moderate",
    "security:scan": "npm run security:audit",
    "prepare": "npm run build",
    "prepublishOnly": "npm run lint && npm run test && npm run security:audit"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "proxmox",
    "proxmox-ve",
    "virtualization",
    "ai",
    "llm",
    "claude",
    "github-copilot",
    "ide-integration",
    "typescript",
    "cross-platform"
  ],
  "author": "Swartdraak",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Swartdraak/Proxmox-MCP.git"
  },
  "bugs": {
    "url": "https://github.com/Swartdraak/Proxmox-MCP/issues"
  },
  "homepage": "https://github.com/Swartdraak/Proxmox-MCP#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "axios": "^1.13.5",
    "https-proxy-agent": "^7.0.5",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/node": "^25.2.2",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "@vitest/coverage-v8": "^2.1.8",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-security": "^3.0.1",
    "prettier": "^3.4.2",
    "typescript": "^5.7.3",
    "vitest": "^2.1.8"
  }
}
